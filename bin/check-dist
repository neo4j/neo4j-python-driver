#!/usr/bin/env bash
set -e

ROOT=$(dirname "$0")/..
SCRIPT=$(basename "$0")
DIST="${ROOT}/dist"
STATUS=0

VERSION="$1"
if [ "${VERSION}" == "" ]
then
    echo "usage: ${SCRIPT} VERSION"
    exit 1
else
    source "${ROOT}/bin/dist-functions"
    for PACKAGE in "neo4j-driver" "neo4j"; do
        PACKAGE="$(normalize_dist_name "$PACKAGE")"
        check_file "${DIST}/${PACKAGE}-${VERSION}.tar.gz"
    done
fi

exit ${STATUS}
