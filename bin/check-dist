#!/usr/bin/env bash
set -e

ROOT=$(dirname "$0")/..
SCRIPT=$(basename "$0")
DIST="${ROOT}/dist"
STATUS=0

VERSION="$1"
if [ "${VERSION}" == "" ]
then
    echo "usage: ${SCRIPT} VERSION"
    exit 1
else
    source "${ROOT}/bin/dist-functions"
    check_file "${DIST}/neo4j-driver-${VERSION}.tar.gz"
    check_file "${DIST}/neo4j-${VERSION}.tar.gz"
fi

exit ${STATUS}
