# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8

[*.{py,js,rst,txt,sh,bat}]
trim_trailing_whitespace = true

[{Makefile,Dockerfile}]
trim_trailing_whitespace = true

[*.bat]
end_of_line = crlf

[*{.py,pyi}]
indent_style = space
indent_size = 4

[*.py]
max_line_length = 79

[*.pyi]
max_line_length = 130
